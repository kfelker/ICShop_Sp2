<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="All Stores"
        android:id="@+id/MainButton3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#373737"
        android:textColor="#ffffff"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Brands"
        android:id="@+id/MainButton2"
        android:layout_above="@+id/MainButton3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#373737"
        android:textColor="#ffffff"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Categories"
        android:id="@+id/MainButton1"
        android:layout_above="@+id/MainButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#373737"
        android:textColor="#ffffff"
        android:clickable="true" />
    <ImageView
        android:id="@+id/imgaeview"
        android:background="#FFFFFF"
        android:src="@drawable/main"
        android:layout_above="@+id/MainButton1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>


</RelativeLayout>